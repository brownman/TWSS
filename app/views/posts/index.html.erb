<% @posts.each do |post| %>
  <tr>
    <td><%= post.message %></td>
    <td><%= post.url %></td>
    <td><%= button_to 'Show', post %></td>
    <td><%= button_to 'Edit', edit_post_path(post) %></td>
    <td><%= button_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

